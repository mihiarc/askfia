# Required
ANTHROPIC_API_KEY=sk-ant-api03-...

# Optional
CORS_ORIGINS=http://localhost:3000
REDIS_URL=redis://localhost:6379
PRELOAD_STATES=NC,GA,SC
LOG_LEVEL=INFO

# MotherDuck (recommended for production - serverless DuckDB)
# Get token at https://app.motherduck.com
MOTHERDUCK_TOKEN=eyJhbG...

# FIA Storage (Legacy - fallback when MotherDuck not configured)
# Local cache settings
FIA_LOCAL_DIR=./data/fia
FIA_LOCAL_CACHE_GB=5.0

# Cloudflare R2 / S3 settings (optional - enables Tier 2 caching)
FIA_S3_BUCKET=your-bucket-name
FIA_S3_PREFIX=fia-duckdb
S3_ENDPOINT_URL=https://<account-id>.r2.cloudflarestorage.com
S3_ACCESS_KEY=your-r2-access-key-id
S3_SECRET_KEY=your-r2-secret-access-key
S3_REGION=auto

# =============================================================================
# GridFIA Cloud Storage (for spatial raster analysis)
# =============================================================================
# Backblaze B2 bucket with pre-processed state Zarr data
# Currently available: RI (Rhode Island)
GRIDFIA_CLOUD__BACKEND=b2
GRIDFIA_CLOUD__BUCKET=gridfia-states
GRIDFIA_CLOUD__PUBLIC_URL=https://f005.backblazeb2.com/file/gridfia-states
GRIDFIA_CLOUD__ENDPOINT_URL=https://s3.us-east-005.backblazeb2.com
GRIDFIA_CLOUD__REGION=us-east-005
